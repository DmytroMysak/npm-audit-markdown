{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "types": ["node"],
    "lib": ["es2022"],
    "useDefineForClassFields": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
